<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toTopOf="@+id/icon2"
        app:layout_constraintEnd_toStartOf="@+id/day1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="60dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toTopOf="@+id/icon3"
        app:layout_constraintEnd_toEndOf="@+id/icon1"
        app:layout_constraintStart_toStartOf="@+id/icon1"
        app:layout_constraintTop_toBottomOf="@+id/icon1"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/icon2"
        app:layout_constraintStart_toStartOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/icon2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/forecast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/day1"
        app:layout_constraintTop_toTopOf="@+id/icon1" />

    <TextView
        android:id="@+id/forecast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/icon2"
        app:layout_constraintEnd_toEndOf="@+id/forecast1"
        app:layout_constraintStart_toStartOf="@+id/forecast1"
        app:layout_constraintTop_toTopOf="@+id/icon2" />

    <TextView
        android:id="@+id/forecast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/icon3"
        app:layout_constraintEnd_toEndOf="@+id/forecast2"
        app:layout_constraintStart_toStartOf="@+id/forecast2"
        app:layout_constraintTop_toTopOf="@+id/icon3" />

    <TextView
        android:id="@+id/day1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon1"
        app:layout_constraintEnd_toStartOf="@+id/forecast1"
        app:layout_constraintStart_toEndOf="@+id/icon1"
        app:layout_constraintTop_toTopOf="@+id/icon1"
        app:layout_constraintVertical_bias="0.487" />

    <TextView
        android:id="@+id/day2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/icon2"
        app:layout_constraintEnd_toEndOf="@+id/day1"
        app:layout_constraintStart_toStartOf="@+id/day1"
        app:layout_constraintTop_toTopOf="@+id/icon2" />

    <TextView
        android:id="@+id/day3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/icon3"
        app:layout_constraintEnd_toEndOf="@+id/day2"
        app:layout_constraintStart_toStartOf="@+id/day2"
        app:layout_constraintTop_toTopOf="@+id/icon3" />

</android.support.constraint.ConstraintLayout>